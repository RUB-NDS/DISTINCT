{
    "manifest_version": 2,
    "name": "chrome-extension",
    "version": "1",
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "all_frames": true,
            "run_at": "document_start",
            "js": [
                "content_init.js",
                "content_frame.js",
                "content_props.js",
                "content_messaging.js",
                "content_storage.js",
                "content_location.js",
                "content_sdk.js",
                "content_flow.js",
                "content_redirects.js"
            ]
        }
    ],
    "permissions": [
        "http://*/*", "https://*/*",
        "tabs", "debugger", "webRequest",
        "webRequestBlocking"
    ],
    "background": {
        "scripts": [
            "background_csp.js",
            "background_cors.js",
            "background_pm.js"
        ],
        "persistent": true
    }
}