{
    "manifest_version": 2,
    "name": "chrome-extension",
    "version": "1",
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "all_frames": true,
            "run_at": "document_start",
            "js": [
                "helpers.js",
                "detect_frame.js",
                "detect_communication.js",
                "detect_postmessage.js",
                "detect_storage.js",
                "detect_sdks.js",
                "detect_flow.js"
            ]
        }
    ],
    "permissions": [
        "webRequest", "webRequestBlocking", "http://*/*", "https://*/*",
        "tabs", "debugger"
    ],
    "background": {
        "scripts": [
            "disable_csp.js",
            "pm_debugger.js"
        ],
        "persistent": true
    }
}